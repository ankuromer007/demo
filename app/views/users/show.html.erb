<%= link_to ( image_tag 'backbutton.jpg' ), :back, :class => 'back' %>
<div class="show">
	<p>
		<b>Name:</b>
		<%= @user.name %>
	</p>

	<p>
		<b>Email:</b>
		<%= @user.email if @user.email %>
	</p>

	<p>
		<b>Contact No:</b>
		<%= @user.contact_no %>
	</p>

	<p>
	  <b>Address:</b>
	  <%= @user.address %>
	</p>

	<p>
	  <b>Avatar:</b><br>
	  <%= image_tag @user.avatar.url(:small) %>
	</p>
</div>
<br>
