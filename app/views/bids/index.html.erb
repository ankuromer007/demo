<br>
<% if @item_users.size > 0 %>

  <h2>Biding done by you</h2>
  <br>

  <table>
    <tr>
      <th></th>
      <th>Name</th>
      <th>Base Price</th>
      <th>Bid Price</th>
      <th>Deadline</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>

  <% @item_users.each do |item_user| %>
    <% item = Item.find(item_user.item_id) %>
    <tr>
      <td><%= image_tag item.image.url(:thumb) %></td>
      <td><%= link_to item.name, item %></td>
      <td>Rs. <%= item.base_price %></td>
      <td>Rs. <%= item_user.bid_price %></td>
      <% if item.deadline >= Time.now + 5.hours + 30.minutes %>
        <td><%= distance_of_time_in_words_to_now(item.deadline - 5.hours - 30.minutes, true) %></td>
      <% else %>
        <td>Sold</td>
      <% end %>
      <td style="text-align: center;"><%= link_to (image_tag 'edit.png'), edit_bid_path(item_user) %></td>
      <td style="text-align: center;"><%= link_to (image_tag 'delete.png'), bid_path(item_user), method: :delete, data: { confirm: 'Are you sure?' }, remote: true, :class => 'delete_item_user' %></td>
    </tr>
  <% end %>
  </table>

  <br><br><br>
  <%= will_paginate @item_users, :class => 'apple_pagination' %>
<% else %>
  <br>
  <h3>You have not bid on any item yet.</h3>
  <br><br>
<% end %>