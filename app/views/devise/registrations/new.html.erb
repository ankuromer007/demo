<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :multipart => true }) do |f| %>
  <%= devise_error_messages! %>
  <br>

  <div><%= f.label :name %><br />
  <%= f.text_field :name, :required => true, :autofocus => true %></div>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :required => true %></div>

  <div><%= f.label :contact_no %><br />
  <%= f.text_field :contact_no, :required => true %></div>

  <div><%= f.label :address %><br />
  <%= f.text_area :address, size: "30x5", :required => true %></div>

  <div><%= f.label :avatar %><br />
  <%= f.file_field :avatar %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>
