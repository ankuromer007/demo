<br>
<% if @items.size > 0 %>

  <h2>Items posted by you</h2>
  <br>

  <table class="mysells">
    <tr>
      <th></th>
      <th>Name</th>
      <th>Description</th>
      <th>Base Price</th>
      <th>Deadline</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>

  <% @items.each do |item| %>
    <tr>
      <td><%= image_tag item.image.url(:thumb) %></td>
      <td><%= link_to item.name, item %></td>
      <td><%= item.description %></td>
      <td>Rs. <%= item.base_price %></td>
      <% if item.deadline >= Time.now + 5.hours + 30.minutes %>
        <td><%= distance_of_time_in_words_to_now(item.deadline - 5.hours - 30.minutes, true) %></td>
        <td style="text-align: center;"><%= link_to (image_tag 'edit.png'), edit_item_path(item) %></td>
      <% else %>
        <td style="text-align: center;">Sold</td>
      <% end %>
      <td style="text-align: center;"><%= link_to (image_tag 'delete.png'), item, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, :class => 'delete_item' %></td>
    </tr>
  <% end %>
  </table>

  <br><br><br>
  <%= will_paginate @items, :class => 'apple_pagination' %>
<% else %>
  <br>
  <h3>You have not posted any item yet.</h3>
  <br><br>
<% end %>