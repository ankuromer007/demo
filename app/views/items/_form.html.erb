<%= form_for(@item, :html => { :multipart => true }) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field"><%= f.label :name %><br />
  <%= f.text_field :name, :required => true, :autofocus => true %></div>

  <div class="field"><%= f.label :description %><br />
  <%= f.text_area :description, size: "30x5" %></div>

  <div class="field"><%= f.label :image %><br />
  <%= f.file_field :image %></div>

  <div class="field"><%= f.label :base_price %><br />
  <%= f.text_field :base_price, :required => true %></div>

  <div class="field"><%= f.label :deadline %><br />
  <%= f.text_field :deadline, :required => true, id: "datetimepicker" %></div>

  <div class="actions"><%= f.submit %></div>
<% end %>
