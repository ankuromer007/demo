<%= link_to ( image_tag 'backbutton.jpg' ), :back, :class => 'back' %>
<div class="show">
  <p>
    <b>Name:</b>
    <%= @item.name %>
  </p>

  <p>
    <b>Description:</b>
    <%= @item.description %>
  </p>

  <p>
    <b>Image:</b><br>
    <%= image_tag @item.image.url(:small) %>
  </p>

  <p>
    <b>Base Price:</b>
    <%= @item.base_price %>
  </p>

  <p>
    <b>Deadline: </b>
    <% if @item.status == false %>
      <%= distance_of_time_in_words_to_now(@item.deadline - 5.hours - 30.minutes, true) %>
    <% else %>
      Sold
    <% end %>
  </p>
</div>
<br>